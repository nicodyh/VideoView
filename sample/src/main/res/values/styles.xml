<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="PickTheme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Anim_scale</item>
    </style>

    <style name="Anim_scale" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/abc_popup_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/abc_popup_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/abc_popup_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/abc_popup_exit</item>
    </style>
</resources>
